extends extends/_layout

block content
	.trend.layout.layout--big
		.trend__title Trendy Arrivals
		.trend__block
			.trend__box
				-
					cards = [
						['616', '211', './img/trend_img-1.png', 'Black Genuine Leather Bags', '$ 23.20'],
						['522', '389', './img/trend_img-2.png', 'Fashion Red Leather Bags', '$ 20.16'],
						['485', '282', './img/trend_img-3.png', 'Fashion Genuine Leather Bags', '$ 30.14']
					]
				each item in cards
					.trend__card-wrap
						.trend__top-line
							.trend__icon-info
								img.trend__icon-like(src="./img/trend_like.png", alt="")
								.trend__info=item[0]
							.trend__icon-info
								img.trend__icon-comm(src="./img/trend_comm.png", alt="")
								.trend__info=item[1]
						.trend__wrap
								.trend__img(style="background-image: url("+ item[2] + ")")
								.trend__name=item[3]
								.trend__price=item[4]
						form.trend__form(action="")
								button.trend__btn Add to Cart
			.trend__box
				-
					cards = [
						['447', '102', './img/trend_img-4.png', 'Simply Leather Bags', '$ 15.20'],
						['253', '120', './img/trend_img-5.png', 'New Fashion Leather Bags', '$ 25.20'],
						['241', '203', './img/trend_img-6.png', 'Single Hand Models Bags', '$ 17.60']
					]
				each item in cards
					.trend__card-wrap
						.trend__top-line
							.trend__icon-info
								img.trend__icon-like(src="./img/trend_like.png", alt="")
								.trend__info=item[0]
							.trend__icon-info
								img.trend__icon-comm(src="./img/trend_comm.png", alt="")
								.trend__info=item[1]
						.trend__wrap
								.trend__img(style="background-image: url("+ item[2] + ")")
								.trend__name=item[3]
								.trend__price=item[4]
						form.trend__form(action="")
								button.trend__btn Add to Cart

	.brand.layout
		.brand__info
			h2.brand__title Our Brands
			h3.brand__name Small Shoes 2017 new Arrivals mini <br> Messenger #[span.brand__name.brand__name--span Classic Shoes]
			.brand__description In porttitor elit ac mi placerat hendrerit. Morbi accumsan, erat in ullamcorper consectetur, nisi erat efficitur eros, sagittis tristique odio turpis vitae dui. Vestibulum gravida est ut erat pretium, non pretium diam feugiat. Integer egestas suscipit lorem ac fermentum. Integer at mauris vitae justo sagittis dapibus. Pellentesque sit amet nisl vitae orci vehicula faucibus. Fusce et lat, feugiat est. 
		.brand__img(style="background-image: url(./img/phone.png)")

	.showcase.layout.layout--big
		.showcase__title Our Showcase
		.showcase__tabs
			.tabs__link
				.tabs__link-title Fashion
				.tabs__link-title Furnitures
				.tabs__link-title.tabs__link-title--active Watches
				.tabs__link-title Mobile
				.tabs__link-title Cloth
				.tabs__link-title Toys
			.tabs__block
				.tabs__block-content
				.tabs__block-content
				.tabs__block-content.visible
					.product-box
						-
							cards = [
								['./img/watch-1.png', 'Fashion Genuine Chain Watch', '$ 25.36'],
								['./img/watch-2.png', 'Fashion Silver Chain Watch', '$ 35.24'],
								['./img/watch-3.png', 'Fashion Chain Watch', '$ 23.12']
							]
						each item in cards
							.product-box__card-wrap
								.product-box__img(style="background-image: url("+ item[0] + ")")
								.product-box__name=item[1]
								.product-box__price=item[2]
					.product-box
						-
							cards = [
								['./img/watch-4.png', 'Fashion Black Chain Watch', '$ 42.32'],
								['./img/watch-5.png', 'Fashion Lether  Watch', '$ 15.20'],
								['./img/watch-6.png', 'Fashion Forign Watch', '$ 36.12']
							]
						each item in cards
							.product-box__card-wrap
								.product-box__img(style="background-image: url("+ item[0] + ")")
								.product-box__name=item[1]
								.product-box__price=item[2]
				.tabs__block-content
				.tabs__block-content
				.tabs__block-content
	
	.newsletter
		.layout
			.newsletter__title Newsletter
			form.newsletter__form(action="")
				input.newsletter__input(type="email" placeholder="Enter your email address..")
				button.newsletter__btn Submit
