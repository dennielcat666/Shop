doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		title Shop

		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap", rel="stylesheet")
		link(rel="stylesheet", href="./css/index.css")
		link(rel="stylesheet", href="./css/font-awesome.css")
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		
	body
		block body
			.canvas
				header.header
					.top-menu.layout
						.logo
							a.logo__link(href="#")
								img(src="./img/logo.png", alt="Логотип")
						.search
							.search__box
								form.search__form(action="")
									button.search__btn
									input.search__input(type="text" placeholder="Search")
							.select__containr.js-select-containr
								.select__name.js-select-name Collection
									<i class="fa fa-chevron-down" aria-hidden="true"></i>
								ul.sub-menu.js-sub-menu
									li.sub-menu__item
										a.sub-menu__limk(href="") Summer
									li.sub-menu__item
										a.sub-menu__limk(href="") Autumn
									li.sub-menu__item
										a.sub-menu__limk(href="") Winter
									li.sub-menu__item
										a.sub-menu__limk(href="") Spring

					.banner.layout
						.banner__box
							h2.banner__name Summer <br> #[span.banner__name.banner__name--span Collection]
							.banner__info #[span.banner__info.banner__info--span 25%] OFF
							a.banner__link(href="") Details
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
				main.main
					block content
				footer.footer
					.footer-block
						.layout
							.footer-block__title Big Shop
							.footer-block__links
								a.footer-block__link-item(href="") Man
								a.footer-block__link-item(href="") Woman
								a.footer-block__link-item(href="") Kids
								a.footer-block__link-item(href="") Bags
								a.footer-block__link-item(href="") Watches
								a.footer-block__link-item(href="") Toys
							.footer-block__social
								a.footer-block__social-item.facebook(href="")
									<i class="fa fa-facebook" aria-hidden="true"></i>
								a.footer-block__social-item.google(href="")
									<i class="fa fa-google-plus" aria-hidden="true"></i>
								a.footer-block__social-item.instagram(href="")
									<i class="fa fa-instagram" aria-hidden="true"></i>
								a.footer-block__social-item.twitter(href="")
									<i class="fa fa-twitter" aria-hidden="true"></i>
					.footer-copy
						.layout
							.footer-copy__text &#169; Copyright 2017. Big Shop by Victor Themes 

			<script src="./js/bundle.js"></script>


							