.showcase
	position relative
	z-index 2
	background-color #fff
	box-shadow 0 0 30px rgba(0,0,0,0.1)
	font-family OpenSans
	padding-top 48px
	padding-bottom 123px
	color light-black
	@media mobile
		padding-bottom 48px

	&__title
		font-weight 700
		font-size 50px
		text-align center
		@media small
			font-size 36px

.tabs
	&__block
		@media tablet
			margin-top 20px
	&__link
		margin 0 auto
		margin-top 87px
		padding 23px 90px 23px 139px
		max-width 1100px
		display flex
		justify-content space-between
		box-shadow 0 0 30px rgba(0,0,0,0.1)
		border-radius 33px
		font-weight 600
		font-size 17px
		@media tablet
			margin-top 50px
			padding 23px 40px 23px 40px
		@media mobile
			flex-direction column
			align-items center
			padding 23px 23px 23px 23px
		@media small
			margin-top 25px

	&__link-title
		cursor pointer

		&.tabs__link-title--active
			color #b394fa
			text-shadow -3px 6px 5px rgba(0,0,0,0.5)
			font-size 19px
		@media mobile
			&:not(:first-child)
				margin-top 10px

	&__block-content
		display none

.visible
	display flex
	flex-direction column
	@media tablet
		flex-direction row
		justify-content center
	@media mobile
		flex-direction column

.product-box
	display flex
	justify-content space-around
	padding 0px 32px 0px 50px
	@media tablet
		flex-direction column
		padding 0px 5px 0px 5px

	&:first-child
		margin-top 75px
		@media tablet
			margin-top 0px

	&:last-child
		margin-top 90px
		@media tablet
			margin-top 0px

	&:last-child .product-box__price
		margin-top 15px
		@media tablet
			margin-top 10px

	&__card-wrap
		@media tablet
			&:not(:first-child)
				margin-top 10px

	&__img
		width 262px
		height 284px
		background-repeat no-repeat
		background-position center
		margin 0 auto
		@media tablet
			background-size contain
			width 246px

		&--fashion
			background-size contain

		&--furnitures
			background-size contain

		&--mobile
			background-size contain

		&--cloth
			background-size contain

		&--toys
			background-size contain

	&__name
		font-size 18px
		color #777777
		font-weight 400
		text-align center
		margin-top 10px
		text-transform capitalize

	&__price
		font-family MyriadPro
		font-size 25px
		font-weight 600
		text-align center
		margin-top 10px