.newsletter
	position relative
	z-index 1
	background-image linear-gradient(to top right, #8c84f9, #a165f4)
	padding-top 160px
	padding-bottom 125px
	margin-top -74px
	font-family OpenSans

	&__title
		font-size 50px
		font-weight 700
		color #fff
		text-align center
	
	&__form
		display flex
		justify-content	space-between
		padding 5px 5px 5px 26px
		margin 0 auto
		max-width 850px
		margin-top 68px
		background-color #fff
		border-radius 33px

	&__input
		font-size 20px
		max-width 600px
		width 100%

	&__btn
		font-size 20px
		color #fff
		background-image linear-gradient(to top right, #8c84f9, #a165f4)
		padding 16px 66px 16px 66px
		border-radius 33px
		cursor pointer
