.footer-block
	padding-top 64px
	padding-bottom 47px

	&__title
		font-family Roboto
		font-size 40px
		font-weight 700
		color #222222
		text-align center

	&__links
		display flex
		justify-content center
		margin-top 39px
		@media mobile
			flex-wrap wrap
			line-height 30px

	&__link-item
		display inline-block
		font-family OpenSans
		font-weight 600
		font-size 18px
		color #404040
		margin 0px 23px

	&__social
		display flex
		justify-content center
		margin-top 49px
		@media small
			flex-direction column
			align-items center
			margin-top 30px

	&__social-item
		display inline-block
		border 1px solid #ecebed
		margin 0px 15px
		border-radius 50%
		font-size 23px
		color #555555
		@media small
			max-width 55px
			&:not(:first-child)
				margin-top 10px

		&:hover
			background-image linear-gradient(to top right, #8c84f9, #a165f4)
			color #fff

.facebook
	padding 15px 20px 15px 20px

.google
	padding 15px 12px 15px 12px

.instagram
	padding 15px 17px 15px 17px

.twitter
	padding 15px 16px 15px 16px

.footer-copy
	background-color #f6f5f7
	padding-top 26px
	padding-bottom 26px

	&__text
		text-align center
		font-family Montserrat
		font-weight 300
		font-size 15px
		color #777777