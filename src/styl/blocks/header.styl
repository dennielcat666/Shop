.header
	background-image url(../img/banner.png)
	background-repeat no-repeat
	background-size cover
	padding-top 80px
	@media tablet
		background-position 20%

.top-menu
	display flex
	justify-content space-between
	@media mobile
		flex-direction column
		align-items center

.logo
	&__link
		display inline-block

.search
	background-color #fff
	display flex
	border-radius 33px
	padding 14px 30px 14px 30px
	@media tablet
		flex-direction column
		background-color transparent
		padding 0px 0px 0px 0px
	@media mobile
		margin-top 20px

	&__form
		display flex
		align-items center
		@media tablet
			background-color #fff
			border-radius 33px
			padding-left 13px

	&__btn
		background-image url(../img/search.png)
		background-color #fff
		background-repeat no-repeat
		background-position center
		width 35px
		height 36px
		padding 5px 5px 5px 5px
		cursor pointer

	&__input
		font-family OpenSans
		font-weight 700
		font-size 18px
		max-width 95px
		padding 6px 10px
		margin-right 21px
		transition max-width 0.5s
		&::-webkit-input-placeholder
			color black-color
		&::-moz-placeholder
			color black-color
		&::-ms-input-placeholder
			color black-color
		&:focus
			max-width 250px
			@media tablet
				max-width 200px


.sub-menu
	display none
	position absolute
	top 50px
	left 0
	background-color #fff
	padding 10px 90px 10px 45px
	border-radius 0 25px 25px 0

	&__item
		list-style none

	&__limk
		display inline-block
		font-family OpenSans
		font-weight 700
		font-size 15px

.select
	&__containr
		position relative
		@media tablet
			display flex
			justify-content flex-end
		@media mobile
			justify-content center

	&__name
		background-color #fff
		padding 6px 6px 6px 40px
		border-left 1px solid #e0e0e0
		font-family OpenSans
		font-weight 700
		font-size 18px
		@media tablet
			border-radius 33px
			margin-top 10px
			padding 6px 6px 6px 23px
			max-width 164px
			width 100%


.banner
	padding-top 180px
	padding-bottom 255px
	display flex
	flex-direction column
	align-items flex-end
	@media tablet
		padding-top 100px

	&__name
		font-family Roboto
		font-weight 700
		font-size 115px
		line-height 120px
		color #000
		@media tablet
			color #fff
		@media mobile
			font-size 85px
			line-height 90px
		@media small
			font-size 62px
			line-height 70px

		&--span
			color #fff
			@media tablet
				color #000

	&__info
		font-family Roboto
		font-weight 500
		font-size 50px
		color #fff
		line-height 100px
		margin-left 10px
		@media tablet
			color #000
			margin-top 60px
		@media mobile
			margin-top 25px
		@media small
			font-size 40px
			margin-top 0px

		&--span
			color #fbf934
			margin-left 0
			@media tablet
				color #fb5d4d
	
	&__link
		display inline-block
		padding 18px 51px 18px 51px
		margin-top 67px
		background-color #fff
		font-family OpenSans
		font-weight 600
		font-size 20px
		margin-left 6px
		border-radius 33px
		@media mobile
			margin-top 10px


